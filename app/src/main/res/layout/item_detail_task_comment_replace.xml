<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vm"
            type="io.plan8.backoffice.vm.item.DetailTaskCommentReplaceItemVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/replaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.replaceTitle}"
            android:textColor="@color/defaultDarkColor"
            android:layout_centerInParent="true"
            android:textSize="12dp" />

        <TextView
            android:layout_toRightOf="@+id/replaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.createdDate}"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grayColor"
            android:textSize="12dp" />
    </RelativeLayout>
</layout>